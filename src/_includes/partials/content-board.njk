<section class="content-board">
  <h2>Latest</h2>
  <small>[partials/content-board.njk]</small>
  <div class="grid-masonry">
    {% for post in collections.post | reverse %}
      {% if post.data.featured %}
        <div class="card featured">
          <h3>
            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
          </h3>
          <p class="card__datetime">{{ post.data.date }} | in {{ post.data.category }}</p>
          {% if post.data.image %}
            <figure>
              <img src="{{ post.data.image }}" alt="{{ post.data.imgAlt }}" width="200" height="300"></figure>
            {% endif %}
            {% if post.data.summary %}
              <h4>{{ post.data.summary }}</h4>
            {% endif %}
            <p>{{ post.templateContent | excerpt }}</p>
          </div>
        {% else %}
          <div class="card">
            <h3>
              <a href="{{ post.url | url }}">{{ post.data.title }}</a>
            </h3>
            <p class="card__datetime">{{ post.data.date }} | in {{ post.data.category }}</p>
            {% if post.data.summary %}
              <h4>{{ post.data.summary }}</h4>
            {% endif %}
            <p>{{ post.templateContent | excerpt }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </section>