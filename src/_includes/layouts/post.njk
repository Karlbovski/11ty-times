{% extends "layouts/base.njk" %}
{% block header %}
  {% include "partials/header-minimal.njk" %}
{% endblock %}
{% block content %}
  <section class="post">
    <h1>{{ title }}</h1>
    <p>
      <small>
        <span>
          <datetime>{{ date | dateToFormat("YYYY MM DD") }}</datetime>
        </span>
        &nbsp;| in {{ category }}
      </small>
    </p>
    {{ content | safe }}
  </section>
{% endblock %}
{% block footer %}
  {% include "partials/footer-minimal.njk" %}
{% endblock %}